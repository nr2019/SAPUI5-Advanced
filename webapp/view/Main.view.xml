<mvc:View controllerName="nryzy.employees.controller.Main"
    xmlns:mvc="sap.ui.core.mvc" 
    displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.f">

    <Shell id="shell">
        <App id="app">
            <pages>
                <Page showHeader="false">
                    <content>
                        <f:FlexibleColumnLayout id="fcl"
                                                backgroundDesign="Solid"
                                                layout="OneColumn">                       
                            <f:beginColumnPages>
                                <mvc:XMLView id="masterEmployeeView"
                                        viewName="nryzy.employees.view.MasterEmployee">
                                </mvc:XMLView>
                            </f:beginColumnPages>
                                              
                            <f:midColumnPages>
                             <mvc:XMLView id="detailEmployeeView"
                                            viewName="nryzy.employees.view.EmployeeDetails">
                                </mvc:XMLView>
                            </f:midColumnPages>
                            
                            <f:endColumnPages>
                                <Page >
                                
                                </Page>
                            </f:endColumnPages>
                        </f:FlexibleColumnLayout>
                    </content>
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View> 