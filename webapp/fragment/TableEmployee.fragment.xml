<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m">
    <Panel id="pan1">
        <Button id="btnShowCity"
            text="{i18n>showCity}"
            visible="{jsonConfig>/visibleBtnShowCity}"
            press="onShowCity"/>
        <Button id="btnHideCity"
            text="{i18n>hideCity}"
            visible="{jsonConfig>/visibleBtnHideCity}"
            press="onHideCity"/>
        <Table  id="tableEmployee"
                items="{jsonEmployees>/Employees}">
            <columns>
                <Column id="col1"
                        visible="{jsonConfig>/visibleID}">
                    <header>
                        <Label id="lbl1" text="{i18n>tableId}"></Label>
                    </header>
                </Column>
                <Column id="col2"
                        visible="{jsonConfig>/visibleName}">
                    <header>
                        <Label id="lbl2" text="{i18n>tableName}"></Label>
                    </header>
                </Column>
                <Column id="col3"
                        visible="{jsonConfig>/visibleCountry}">
                    <header>
                        <Label id="lbl3" text="{i18n>tableCountry}"></Label>
                    </header>
                </Column>
                <Column id="col4"
                        visible="{jsonConfig>/visibleCity}">
                    <header>
                        <Label id="lbl4" text="{i18n>tableCity}"></Label>
                    </header>
                </Column>

                 <Column id="col5" 
                        width="100px">
                    <header>
                        <Label id="lbl5" text="{i18n>tableShowDetails}"></Label>
                    </header>
                </Column>
            </columns>
            <items>
                <ColumnListItem id="cli1" >
                    <cells>
                        <Label id="cli1Lbl1" text="{jsonEmployees>EmployeeID}"/>
                        <Label id="cli1Lbl2" text="{jsonEmployees>LastName}, {jsonEmployees>FirstName}"/>
                        <Label id="cli1Lbl3" text="{jsonEmployees>Country}"/>
                        <Label id="cli1Lbl4" text="{jsonEmployees>City}"/>
                        <core:Icon  src="sap-icon://show"
                                    press="showOrders"/>
                    </cells>
                </ColumnListItem>
            </items>
        </Table>

        <HBox id="ordersTable"></HBox>
    </Panel>
</core:FragmentDefinition>